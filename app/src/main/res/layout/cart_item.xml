<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#36343B"
    android:layout_marginBottom="16dp"
    android:id="@+id/card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_gravity="right"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="210dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ars1h_2"
            android:background="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_button"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/white"
            android:elevation="20dp"
            android:hint="backButton"
            app:strokeColor="#FF0000"
            app:strokeWidth="2dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="20dp"
            app:icon="@drawable/baseline_clear_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="#FF0000" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toEndOf="@id/imageView"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="16dp"
            android:text="Product Name"
            android:lineSpacingExtra="-10dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nats" />

        <TextView
            android:id="@+id/product_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView"
            android:layout_below="@id/product_name"
            android:layout_marginHorizontal="16dp"
            android:text="Size"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nats"/>

        <TextView
            android:id="@+id/product_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView"
            android:layout_below="@id/product_size"
            android:layout_marginHorizontal="16dp"
            android:text="Quantity"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nats"/>

        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView"
            android:layout_below="@id/product_quantity"
            android:layout_marginHorizontal="16dp"
            android:text="Price"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nats"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:src="@drawable/baseline_double_arrow_24"
        app:tint="#36343B"
        android:layout_gravity="right"/>

</androidx.cardview.widget.CardView>
